class Solution {
public:
    void nextPermutation(vector<int>& nums) {
        int min;
        int isSorted=0;
        for(int i=1;i<nums.size();i++)
        {
            if(nums[i]>nums[i-1])
            {
                isSorted=1;
            }
        }
        if(isSorted!=1)
        {
            sort(nums.begin(),nums.end());
            return;
        }
        
        int i=nums.size()-2;
        while(i>=0)
        {
            if(nums[i]<nums[i+1])
            {
                min=i+1;
            
                for(int j=i+1;j<nums.size();j++)
                {
                    if(nums[j]>nums[i] and nums[j]<nums[min])
                    {
                        min=j;
                    }
                }
                swap(nums[min],nums[i]);
                sort(nums.begin()+i+1,nums.end());
                return;
            }
            i--;
        }
        return;
    }
};
