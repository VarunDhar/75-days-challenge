class Solution {
public:
    int maxProfit(vector<int>& prices) {
        int ans=0;
        
        int min=INT_MAX;
        int max=INT_MIN;
        int minpos=0;
        int size=prices.size();
            
        for(int i=0;i<prices.size();i++)
        {
            if(prices[i]<min)
            {
                min=prices[i];
                minpos=i;
            }
            if(prices[i]>min and i>minpos)
            {
                
                ans+=prices[i]-min;
                min=prices[i];
                minpos=i;
            }
                
        }
        return ans;
    }
};
