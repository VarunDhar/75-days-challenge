class Solution {
public:
    int maxArea(vector<int>& height) {
        
        int i=0;
        int j=height.size()-1;
        
        int sum=0;
        while(i<j)
        {
            int temp= (j-i)*min(height[j],height[i]);
            if(sum<temp)
            {
                sum=temp;
            }
            if(height[i]>height[j])
            {
                j--;
            }
            else
                i++;
        }
        return sum;
    }
};
