class Solution {
public:
    int maxProfit(vector<int>& prices) {
        int ans=0;
        int min=INT_MAX;
        int max=INT_MIN;
        int minpos=0;
        

        for(int i=0;i<prices.size();i++)
        {
            if(prices[i]<min)
            {
                min=prices[i];
                minpos=i;
            }
            if(prices[i]>=min and i>minpos)
            {
                max=prices[i];
                
                if(max-min>ans )
                {
                    ans=max-min;
                }
            }
        }
        return ans;
    }
};
